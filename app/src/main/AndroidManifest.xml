<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gurpreetsk.me.motivationdaily">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.GridActivity" />

        <provider
            android:name=".data.QuotesProvider"
            android:authorities="authority:gurpreetsk.me.motivationdaily"
            android:exported="false" />

        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.QuoteListActivity" />
        <activity android:name=".activities.QuoteViewActivity" />
    </application>

</manifest>